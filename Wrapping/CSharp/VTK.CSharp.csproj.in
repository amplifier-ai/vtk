<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>VTK</RootNamespace>
    <AssemblyName>VTK.CSharp</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <Version>@VTK_MAJOR_VERSION@.@VTK_MINOR_VERSION@.@VTK_BUILD_VERSION@</Version>
    <AssemblyVersion>@VTK_MAJOR_VERSION@.@VTK_MINOR_VERSION@.0.0</AssemblyVersion>
    <FileVersion>@VTK_MAJOR_VERSION@.@VTK_MINOR_VERSION@.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- Hand-written runtime classes -->
    <Compile Include="runtime/**/*.cs" />
    <!-- Generated wrapper classes -->
    <Compile Include="generated/**/*.cs" />
    <!-- Exclude generated vtkObjectBase.cs â€” we use the hand-written version -->
    <Compile Remove="generated/vtkObjectBase.cs" />
  </ItemGroup>
</Project>
